<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/after_home"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="16dp"
    android:paddingTop="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:orientation="vertical"
    tools:context="com.odracir.android.ddmxmkt.MainActivity"
    android:background="@drawable/background">

    <TextView
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="Available Tours"
        android:textSize="45dp"
        android:textStyle="bold"
        android:layout_marginBottom="80dp"
        android:layout_gravity="center"
        android:background="@drawable/custom_button"
        android:textColor="#FFFFFF"
        android:textAlignment="center"
        android:paddingBottom="5dp">

    </TextView>

    <Button
        android:id="@+id/btnTour1"
        android:layout_below="@+id/textView"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:onClick="tour1InfoLayoutButton"
        android:text="Douro Vintage Tours"
        android:textSize="24sp"
        android:background="@drawable/custom_button"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="5dp"/>

    <Button
        android:id="@+id/btnTour2"
        android:layout_below="@+id/btnTour1"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:onClick="tour2InfoLayoutButton"
        android:text="CMTour"
        android:textSize="24sp"
        android:background="@drawable/custom_button"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="5dp"/>

    <Button
        android:id="@+id/btnTour3"
        android:layout_below="@+id/btnTour2"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:onClick="tour3InfoLayoutButton"
        android:text="CenÃ¡rios PT"
        android:textSize="24sp"
        android:background="@drawable/custom_button"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="5dp"/>

    <Button
        android:id="@+id/btnTour4"
        android:layout_below="@+id/btnTour3"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:onClick="tour4InfoLayoutButton"
        android:text="The Other Side"
        android:textSize="24sp"
        android:background="@drawable/custom_button"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="5dp"/>

    <Button
        android:id="@+id/btnTour5"
        android:layout_below="@+id/btnTour4"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:onClick="tour5InfoLayoutButton"
        android:text="Douro Exclusive"
        android:textSize="24sp"
        android:background="@drawable/custom_button"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="5dp"/>

    <Button
        android:id="@+id/btnTour6"
        android:layout_below="@+id/btnTour5"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:onClick="tour6InfoLayoutButton"
        android:text="Premium Tours"
        android:textSize="24sp"
        android:background="@drawable/custom_button"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="5dp"/>

    <Button
        android:id="@+id/btnTour7"
        android:layout_below="@+id/btnTour6"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:onClick="tour7InfoLayoutButton"
        android:text="Tours no Douro"
        android:textSize="24sp"
        android:background="@drawable/custom_button"
        android:textColor="#FFFFFF"/>


</LinearLayout>